/* Neobrutalism Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Blue & Yellow Color Palette */
    --primary: #3b82f6;      /* Bright blue */
    --secondary: #1e40af;    /* Darker blue */
    --accent: #fbbf24;       /* Yellow */
    --accent-dark: #f59e0b;  /* Darker yellow */
    
    --bg-main: #fef3c7;      /* Warm beige/cream */
    --bg-alt: #dbeafe;       /* Light blue */
    --bg-white: #ffffff;
    
    --text: #000000;
    --border: #000000;
    
    /* Neobrutalism specifics */
    --border-width: 4px;
    --border-radius: 8px;    /* Universal border radius */
    --shadow-offset: 8px;
    --transition: all 0.15s ease;
}
/* Loading text utility */
.loading-text {
    text-align: center;
    padding: 2rem;
    font-weight: 600;
}

body {
    font-family: 'Space Grotesk', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Arial Black', sans-serif;
    line-height: 1.5;
    color: var(--text);
    background-color: var(--bg-main);
    font-weight: 700;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Neobrutalism Header */
.site-header {
    background-color: var(--bg-white);
    color: var(--text);
    padding: 1.5rem 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    border-bottom: var(--border-width) solid var(--border);
}

.site-header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
}

.logo {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.logo h1 {
    font-size: 1.75rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -1px;
}

/* Mobile menu toggle */
.menu-toggle {
    display: none;
    padding: 0.5rem 1rem;
    border: var(--border-width) solid var(--border);
    background-color: var(--bg-white);
    color: var(--text);
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.875rem;
    cursor: pointer;
    transition: var(--transition);
    border-radius: var(--border-radius);
}

.menu-toggle:hover {
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--border);
}

.menu-toggle:active {
    transform: translate(0, 0);
    box-shadow: none;
}

.main-nav ul {
    display: flex;
    list-style: none;
    gap: 0.5rem;
    flex-wrap: wrap;
}

.main-nav a {
    color: var(--text);
    text-decoration: none;
    font-weight: 700;
    width: 100vw;
    max-width: 100vw;
    border: var(--border-width) solid var(--border);
    background-color: var(--bg-white);
    transition: var(--transition);
    text-transform: uppercase;
    font-size: 0.875rem;
    display: block;
    border-radius: var(--border-radius);
}
    /* Hide register in list on mobile; show bottom CTA instead */

.main-nav a:hover {
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--border);
}

.main-nav a:active {
    transform: translate(0, 0);
    box-shadow: none;
}

    /* Bottom CTA area */
    .nav-cta {
        margin-top: auto;
        padding: 1rem;
        border-top: var(--border-width) solid var(--border);
        background: var(--bg-white);
    }
    .nav-cta-inner {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
    }
    .nav-cta .cta-btn {
        display: block;
        text-align: center;
        padding: 0.75rem 1rem;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 1px;
        border: var(--border-width) solid var(--border);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--border);
        background: var(--bg-white);
        color: var(--text);
        text-decoration: none;
        transition: var(--transition);
    }
    .nav-cta .cta-register {
        background: var(--primary);
        color: #fff;
    }
    .nav-cta .cta-btn:hover {
        transform: translate(-2px, -2px);
        box-shadow: 4px 4px 0 var(--border);
    }
/* Register button in navbar (desktop) */
.main-nav ul li a.btn.nav-register {
    background-color: var(--primary);
    color: #fff;
    border: var(--border-width) solid var(--border);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--border);
    font-weight: 900;
    padding: 0.5rem 1.25rem;
    margin-left: 1rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: var(--transition);
    position: relative;
    z-index: 1;
    text-align: center;
    text-decoration: none;
}
.main-nav ul li a.btn.nav-register:hover {
    background-color: var(--accent);
    color: #fff;
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 var(--border);
}
.main-nav ul li a.btn.nav-register:active {
    background-color: var(--primary);
    color: #fff;
    transform: translate(0, 0);
    box-shadow: none;
}

/* Hide close button on desktop */
.nav-close {
    display: none;
}

/* Neobrutalism Hero Section */
.hero {
    background-color: var(--primary);
    color: var(--text);
    padding: 6rem 2rem;
    text-align: center;
    border-bottom: 2px solid var(--border);
    position: relative;
}

.hero::after {
    content: '';
    position: absolute;
    bottom: calc(var(--border-width) * -1);
    left: 0;
    right: 0;
    height: var(--shadow-offset);
    background-color: var(--border);
    z-index: -1;
}

.hero-content {
    max-width: 800px;
    margin: 0 auto;
}

.hero h2 {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -2px;
    line-height: 1.1;
}

.hero p {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    font-weight: 600;
    line-height: 1.6;
}

/* Neobrutalism Buttons */
.btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    text-decoration: none;
    font-weight: 800;
    transition: var(--transition);
    cursor: pointer;
    border: var(--border-width) solid var(--border);
    text-transform: uppercase;
    font-size: 0.95rem;
    letter-spacing: 0.5px;
    position: relative;
    border-radius: var(--border-radius);
    text-align: center;
}

.btn-primary {
    background-color: var(--accent);
    color: var(--text);
    box-shadow: 6px 6px 0 var(--border);
}

.btn-primary:hover {
    transform: translate(3px, 3px);
    box-shadow: 3px 3px 0 var(--border);
}

.btn-primary:active {
    transform: translate(6px, 6px);
    box-shadow: none;
}



.btn-outline {
    background-color: var(--bg-white);
    color: var(--text);
    box-shadow: 6px 6px 0 var(--border);
}

.btn-outline:hover {
    transform: translate(3px, 3px);
    box-shadow: 3px 3px 0 var(--border);
}

.btn-outline:active {
    transform: translate(6px, 6px);
    box-shadow: none;
}

.btn-large {
    padding: 1.25rem 3rem;
    font-size: 1.1rem;
}

/* Neobrutalism Content Sections */
.content-section {
    padding: 4rem 2rem;
    border-bottom: var(--border-width) solid var(--border);
}

.content-section.alt-bg {
    background-color: var(--bg-alt);
}

.content-section h2 {
    font-size: 2.75rem;
    margin-bottom: 3rem;
    text-align: center;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -1px;
}

.content-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
}

.content-card {
    background-color: var(--bg-white);
    padding: 2rem;
    border: var(--border-width) solid var(--border);
    border-radius: var(--border-radius) !important;
    box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--border);
    transition: var(--transition);
}

.content-card:hover {
    transform: translate(-4px, -4px);
    box-shadow: 12px 12px 0 var(--border);
}

.content-card:active {
    transform: translate(0, 0);
    box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--border);
}

.content-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    font-weight: 900;
    text-transform: uppercase;
}

.content-card p {
    font-weight: 500;
    line-height: 1.7;
}

/* Neobrutalism Recent Items Sections (Games & Events) */
.recent-items-section {
    padding: 4rem 2rem;
    border-bottom: var(--border-width) solid var(--border);
}

.recent-items-section.alt-bg {
    background-color: var(--bg-alt);
}

.recent-items-section h2 {
    font-size: 2.75rem;
    margin-bottom: 3rem;
    text-align: center;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -1px;
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    gap: 1.5rem;
}

.section-header h2 {
    margin-bottom: 0;
    text-align: left;
}

.items-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
    margin-top: 2rem;
}

.item-card {
    background-color: var(--bg-white);
    border: var(--border-width) solid var(--border);
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--border);
    transition: var(--transition);
    display: flex;
    flex-direction: column;
}

/* Card hover effect - entire card moves when hovering button */
.item-card:hover {
    transform: translate(-3px, -3px);
    box-shadow: calc(var(--shadow-offset) + 1px) calc(var(--shadow-offset) + 1px) 0 var(--border);
}
.item-card:has(.card-btn:hover) {
    transform: translate(6px, 6px);
    box-shadow: calc(var(--shadow-offset) - 4px) calc(var(--shadow-offset) - 4px) 0 var(--border);
}

.item-card:has(.card-btn:active) {
    transform: translate(var(--shadow-offset), var(--shadow-offset));
    box-shadow: none;
}

.card-btn {
    display: block;
    width: 100%;
    margin: 0;
    background-color: var(--primary);
    color: #000;
    font-weight: 800;
    text-transform: uppercase;
    font-size: 1rem;
    letter-spacing: 0.5px;
    border: none;
    border-top: var(--border-width) solid var(--border);
    border-radius: 0 0 4px 4px;
    padding: 1rem 0;
    align-self: stretch;
    transition: var(--transition);
    position: relative;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1;
    text-align: center;
}


.item-thumbnail {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background-color: var(--bg-main);
    border-bottom: var(--border-width) solid var(--border);
    border-radius: var(--border-radius) var(--border-radius) 0 0;
}

.item-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.item-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.item-content h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    font-weight: 900;
    text-transform: uppercase;
}

.item-content p {
    font-weight: 500;
    margin-bottom: 1.5rem;
    line-height: 1.7;
    flex: 1;
}

/* Full-width button at bottom of card */

/* Remove old .item-content .btn rules, now handled by .item-card > .btn-secondary */

/* Neobrutalism Resources Section */
.resources-section {
    padding: 4rem 2rem;
    background-color: var(--bg-alt);
    border-bottom: var(--border-width) solid var(--border);
}

.resources-section h2 {
    font-size: 2.75rem;
    margin-bottom: 3rem;
    text-align: center;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -1px;
}

.resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
}

.resource-card {
    background-color: var(--bg-white);
    padding: 2rem;
    border: var(--border-width) solid var(--border);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--border);
    transition: var(--transition);
}

.resource-card:hover {
    transform: translate(-3px, -3px);
    box-shadow: 11px 11px 0 var(--border);
}

.resource-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    font-weight: 900;
    text-transform: uppercase;
}

.resource-card ul {
    list-style: none;
}

.resource-card li {
    margin-bottom: 0.875rem;
}

.resource-card a {
    color: var(--text);
    text-decoration: none;
    transition: var(--transition);
    font-weight: 600;
    border-bottom: 2px solid transparent;
    display: inline-block;
}

.resource-card a:hover {
    border-bottom: 2px solid var(--text);
    transform: translateX(2px);
}

/* Neobrutalism Call to Action Section */
.cta-section {
    background-color: var(--accent);
    color: var(--text);
    padding: 5rem 2rem;
    text-align: center;
    border-bottom: var(--border-width) solid var(--border);
}

.cta-section ::selection {
    background-color: var(--primary);
    color: #fff;
}

.cta-content h2 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -1px;
}

.cta-content p {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    font-weight: 600;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
}

.cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
}

/* Neobrutalism Footer */
.site-footer {
    background-color: var(--secondary);
    color: var(--bg-white);
    padding: 3rem 2rem 1rem;
}

.footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2.5rem;
    margin-bottom: 2rem;
}

.footer-section h3 {
    font-size: 1.25rem;
    margin-bottom: 1.25rem;
    font-weight: 900;
    text-transform: uppercase;
}

.footer-section p {
    font-weight: 600;
    line-height: 1.8;
}

.footer-section ul {
    list-style: none;
}

.footer-section li {
    margin-bottom: 0.75rem;
}

.footer-section a {
    color: var(--bg-white);
    text-decoration: none;
    transition: var(--transition);
    font-weight: 700;
    border-bottom: 2px solid transparent;
    display: inline-block;
}

.footer-section a:hover {
    border-bottom: 2px solid var(--bg-white);
    transform: translateX(2px);
}

.footer-bottom {
    border-top: var(--border-width) solid var(--bg-white);
    padding-top: 1.5rem;
    margin-top: 2rem;
    text-align: center;
    font-weight: 700;
}

/* --- Article Page Styles --- */
.article-header {
    background-color: var(--primary);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 3rem 2rem;
    border-bottom: var(--border-width) solid var(--border);
    position: relative;
}
.article-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 0;
}
.article-header::after {
    content: '';
    position: absolute;
    bottom: calc(var(--border-width) * -1);
    left: 0;
    right: 0;
    height: var(--shadow-offset);
    background-color: var(--border);
    z-index: -1;
}
.article-header .container {
    max-width: 900px;
    position: relative;
    z-index: 1;
}
.back-link {
    display: inline-block;
    margin-bottom: 1.5rem;
    color: var(--text);
    text-decoration: none;
    font-weight: 700;
    padding: 0.5rem 1rem;
    border: var(--border-width) solid var(--border);
    background-color: var(--bg-white);
    transition: var(--transition);
    text-transform: uppercase;
    font-size: 0.875rem;
    border-radius: var(--border-radius);
}
.back-link:hover {
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--border);
}
.back-link:active {
    transform: translate(0, 0);
    box-shadow: none;
}
.article-title {
    font-size: 3rem;
    margin-bottom: 1rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -2px;
    line-height: 1.1;
    color: #ffffff;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
}
.article-description {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1rem;
    color: #ffffff;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.8);
}
.article-meta {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    font-weight: 600;
    margin-top: 1.5rem;
}
.meta-item {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: var(--bg-white);
    border: var(--border-width) solid var(--border);
    border-radius: var(--border-radius);
}
.article-content {
    padding: 4rem 2rem;
    background-color: var(--bg-white);
}
.article-content .container {
    max-width: 1200px;
}

/* Article Layout - Responsive Grid */
.article-layout {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
}

@media (min-width: 1024px) {
    .article-layout {
        grid-template-columns: 250px 1fr;
    }
}

/* Table of Contents */
.table-of-contents {
    background-color: var(--bg-main);
    border: var(--border-width) solid var(--border);
    border-radius: var(--border-radius);
    padding: 1.5rem;
    box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--border);
    order: 1;
}

@media (min-width: 1024px) {
    .table-of-contents {
        position: sticky;
        top: 100px;
        align-self: start;
        max-height: calc(100vh - 120px);
        overflow-y: auto;
        order: 1;
    }
}

.table-of-contents h3 {
    font-size: 1rem;
    font-weight: 900;
    text-transform: uppercase;
    margin-bottom: 1rem;
    letter-spacing: 0.5px;
}

.toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.toc-item {
    margin-bottom: 0.5rem;
}

.toc-h2 {
    padding-left: 0;
}

.toc-h3 {
    padding-left: 1rem;
}

.toc-h4 {
    padding-left: 2rem;
}

.toc-h5 {
    padding-left: 3rem;
}

.toc-h6 {
    padding-left: 4rem;
}

.toc-link {
    color: var(--text);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    display: block;
    padding: 0.25rem 0;
    transition: var(--transition);
}

.toc-link:hover {
    color: var(--primary);
    transform: translateX(4px);
}

.article-body {
    background-color: var(--bg-white);
    padding: 3rem;
    border: var(--border-width) solid var(--border);
    box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--border);
    line-height: 1.8;
    border-radius: var(--border-radius);
    order: 2;
}

@media (min-width: 1024px) {
    .article-body {
        order: 2;
    }
}
.article-body h1,
.article-body h2,
.article-body h3 {
    font-weight: 900;
    text-transform: uppercase;
    margin-top: 2rem;
    margin-bottom: 1rem;
    letter-spacing: -0.5px;
}
.article-body h1 {
    font-size: 2.5rem;
    border-bottom: var(--border-width) solid var(--border);
    padding-bottom: 0.5rem;
}
.article-body h2 {
    font-size: 2rem;
}
.article-body h3 {
    font-size: 1.5rem;
}
.article-body p {
    margin-bottom: 1.25rem;
    font-weight: 500;
}
.article-body ul,
.article-body ol {
    margin-bottom: 1.25rem;
    padding-left: 2rem;
}
.article-body li {
    margin-bottom: 0.5rem;
    font-weight: 500;
}
.article-body strong {
    font-weight: 900;
}
.article-body em {
    font-style: italic;
}
.article-body a {
    color: var(--text);
    font-weight: 700;
    border-bottom: 2px solid var(--text);
    text-decoration: none;
    transition: var(--transition);
}
.article-body a:hover {
    background-color: var(--yellow);
}
.article-body blockquote {
    border-left: var(--border-width) solid var(--border);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    background-color: var(--bg-main);
    padding: 1.5rem;
}
.article-body code {
    background-color: var(--bg-main);
    padding: 0.25rem 0.5rem;
    border: 2px solid var(--border);
    font-family: 'Courier New', monospace;
    font-weight: 700;
}
.article-body pre {
    background-color: var(--bg-main);
    padding: 1.5rem;
    border: var(--border-width) solid var(--border);
    overflow-x: auto;
    margin: 1.5rem 0;
}
.article-body pre code {
    background: none;
    border: none;
    padding: 0;
}
.article-body hr {
    border: none;
    border-top: var(--border-width) solid var(--border);
    margin: 2rem 0;
}
@media (max-width: 768px) {
    .article-title {
        font-size: 2rem;
    }
    .article-body {
        padding: 1.5rem;
    }
    .article-body h1 {
        font-size: 1.75rem;
    }
    .article-body h2 {
        font-size: 1.5rem;
    }
    .article-body h3 {
        font-size: 1.25rem;
    }
}

/* Archive Pages Styles */
.archive-section {
    padding: 4rem 2rem;
    background-color: var(--bg-white);
    min-height: 80vh;
}

.archive-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    gap: 1rem;
}

.archive-header h1 {
    font-size: 3rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -1px;
}

/* Filters */
.filters {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    align-items: flex-end;
    padding: 2rem;
    background-color: var(--bg-alt);
    border: var(--border-width) solid var(--border);
    border-radius: var(--border-radius);
    margin-bottom: 3rem;
    box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--border);
}

.filter-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    min-width: 150px;
    width: max-content;
}

.filter-group:first-child {
    flex: 1;
    width: auto;
}

.filter-group label {
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.875rem;
}

.filter-select,
.filter-input {
    padding: 0.875rem 1rem;
    border: var(--border-width) solid var(--border);
    background-color: var(--bg-white);
    font-weight: 600;
    font-size: 0.95rem;
    cursor: pointer;
    border-radius: var(--border-radius);
    height: 3rem;
    font-family: inherit;
    display: flex;
    align-items: center;
}

.filter-input {
    cursor: text;
}

.filter-select {
    width: 100%;
    min-width: auto;
}

.filter-select:hover,
.filter-input:hover,
.filter-select:focus,
.filter-input:focus {
    outline: none;
}

.filters .btn {
    height: 3rem;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: auto;
    font-size: 0.875rem;
    text-transform: uppercase;
    box-shadow: none;
}

.filters .btn:hover {
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--border);
}

.filters .btn:active {
    transform: translate(0, 0);
    box-shadow: none;
}

@media (max-width: 1024px) {
    .site-header .container {
        justify-content: space-between;
    }
    
    /* Show hamburger menu toggle */
    .menu-toggle {
        display: block;
        order: 3;
    }
    
    /* Hide nav by default on mobile */
    .main-nav {
        position: fixed;
        top: 0;
        right: 0;
        height: 100vh;
        width: 100vw;
        max-width: none;
        background: var(--bg-white);
        color: var(--text);
        box-shadow: -8px 0 0 var(--border);
        border-left: var(--border-width) solid var(--border);
        z-index: 2000;
        display: flex;
        flex-direction: column;
        transform: translateX(100%);
        transition: transform 0.26s cubic-bezier(.2,.8,.2,1);
        padding: 0 0 2rem 0;
        overflow-y: auto;
        box-sizing: border-box;
    }
    .main-nav ul .nav-register { display: none; }
    .main-nav.active {
        transform: translateX(0);
    }
    .main-nav ul {
        display: flex;
        flex-direction: column;
        margin: 4rem 0 0 0;
        padding: 0.25rem;
        width: 100%;
        align-items: stretch;
        box-sizing: border-box;
        gap: 0.25rem;
    }
    .main-nav li {
        width: 100%;
        margin: 0;
        padding: 0;
        border: 0;
    }
    .main-nav a {
        display: block;
        width: calc(100% - 1rem);
        margin: 0.5rem;
        text-align: center;
        color: var(--text);
        font-size: 1rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 0.75rem 1rem;
        background-color: var(--bg-white);
        border: var(--border-width) solid var(--border);
        border-radius: var(--border-radius);
        text-decoration: none;
        transition: var(--transition);
        box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--border);
        transform: none;
        box-sizing: border-box;
        word-break: break-word;
    }
    /* Hide register in the list on mobile; use bottom CTA */
    .main-nav ul .nav-register { display: none; }
    .main-nav a:hover {
        transform: translate(-2px, -2px);
        box-shadow: 4px 4px 0 var(--border);
    }
    .main-nav a:active {
        transform: translate(0, 0);
        box-shadow: none;
    }
    
    .nav-close {
        display: block;
        position: absolute;
        top: 1rem;
        right: 1rem;
        background-color: var(--bg-white);
        color: var(--text);
        border: var(--border-width) solid var(--border);
        border-radius: var(--border-radius);
        font-size: 1.5rem;
        padding-left: 10px;
        padding-right: 10px;
        font-weight: 700;
        cursor: pointer;
        transition: var(--transition);
        text-transform: uppercase;
        z-index: 2100;
    }
    .nav-close:hover {
        transform: translate(-2px, -2px);
        box-shadow: 4px 4px 0 var(--border);
    }
    .nav-close:active {
        transform: translate(0, 0);
        box-shadow: none;
    }

    .hero h2 {
        font-size: 2.25rem;
    }

    .hero p {
        font-size: 1rem;
    }

    .content-section h2,
    .recent-items-section h2,
    .resources-section h2,
    .cta-content h2 {
        font-size: 2rem;
    }

    .content-grid,
    .items-grid,
    .resources-grid {
        grid-template-columns: 1fr;
    }

    .cta-buttons {
        flex-direction: column;
        align-items: stretch;
    }

    .btn-large {
        width: 100%;
        max-width: 350px;
        margin: 0 auto;
    }

    /* Reduce shadow offset on mobile */
    :root {
        --shadow-offset: 6px;
    }

    .content-card,
    .item-card,
    .resource-card {
        box-shadow: 6px 6px 0 var(--border);
    }

    .content-card:hover,
    .resource-card:hover {
        box-shadow: 9px 9px 0 var(--border);
    }
    
    .item-card:has(.btn:hover) {
        box-shadow: 3px 3px 0 var(--border);
    }
}

/* Mobile nav: remove blue background, match desktop buttons, add margin */
@media (max-width: 1023px) {
    .main-nav {
        background: var(--bg-white);
        color: var(--text);
        box-shadow: -8px 0 0 var(--border);
        border-left: var(--border-width) solid var(--border);
        overflow-y: auto;
        height: 100vh;
        min-width: 320px;
        width: 100vw;
        max-width: none;
        padding-bottom: 2rem;
    }
    .main-nav ul {
        flex-direction: column;
        align-items: stretch;
        width: 100%;
        margin: 4rem 0 0 0;
        padding: 0;
    }
    .main-nav li {
        width: 100%;
        border-bottom: var(--border-width) solid var(--border);
        margin: 0;
        padding: 0;
    }
    .main-nav li:last-child {
        border-bottom: none;
    }
    .main-nav a,
    .main-nav ul li a.btn.nav-register {
        display: block;
        width: 100%;
        text-align: left;
        color: var(--text);
        font-size: 1rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 0.5rem 1rem;
        background-color: var(--bg-white);
        border: var(--border-width) solid var(--border);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--border);
        margin: 0.5rem 0.5rem;
        transition: var(--transition);
        position: relative;
        z-index: 1;
        text-decoration: none;
    }
    .main-nav ul li a.btn.nav-register {
        background-color: var(--primary);
        color: #fff;
        margin: 0.5rem 0.5rem;
    }
    .main-nav a:hover,
    .main-nav ul li a.btn.nav-register:hover {
        background-color: var(--accent);
        color: #fff;
        transform: translate(-2px, -2px);
        box-shadow: 6px 6px 0 var(--border);
    }
    .main-nav a:active,
    .main-nav ul li a.btn.nav-register:active {
        background-color: var(--primary);
        color: #fff;
        transform: translate(0, 0);
        box-shadow: none;
    }
}

/* Smooth Scrolling */
html {
    scroll-behavior: smooth;
}

/* Selection color */
::selection {
    background-color: var(--accent);
    color: var(--text);
}

/* Focus styles for accessibility */
*:focus-visible {
    outline: 3px solid var(--primary);
    outline-offset: 3px;
}
